{
  "name": "niwin",
  "private": true,
  "version": "0.0.0",
  "description": "Niwin desktop app",
  "author": "Niwin Team",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "dev:elec:build": "tsc -p tsconfig.electron.json --watch",
    "start:electron": "npm run build && npm run build:electron && electron .",
    "electron:dev": "wait-on tcp:5173 && npm run build:electron && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev:electron": "concurrently \"npm run dev\" \"npm run electron:dev\"",
    "dist": "npm run build && npm run build:electron && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "productName": "niwin",
    "appId": "com.niwin.app",
    "directories": {
      "output": "release",
      "buildResources": "buildResources"
    },
    "icon": "buildResources/icon.png",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!**/*.map"
    ],
    "asar": true,
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    }
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  }
}
